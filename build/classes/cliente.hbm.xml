<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Cliente" table="cleinte">
        <id column="email" name="email" type="string"></id>
        <property name="nombre" type="string"><column name="nombre" length="40"/></property>
        <property name="domicilio" type="string"><column name="domicilio"/></property>
        <property name="nif" type="string"><column name="nif"/></property>
        <property name="premium" type="boolean"><column name="premium"/></property>
        <set name="pedido" table="pedido" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="cliente.nif" not-null="true" />
            </key>
            <one-to-many class="model.Cliente" />
        </set>
    </class>
    
</hibernate-mapping>